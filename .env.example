# Mode: test (simulation) or real (live trading)
POLY_MODE=real

# Private key for signing (required for real mode)
POLY_PRIVATE_KEY=0xYOUR_PRIVATE_KEY_HERE

# Funder address (for POLY_PROXY wallets - the Polymarket trading wallet)
POLY_FUNDER_ADDRESS=0xYOUR_FUNDER_ADDRESS_HERE

# API credentials (generate via generate_creds.py)
POLY_API_KEY=your-api-key-here
POLY_API_SECRET=your-api-secret-here
POLY_PASSPHRASE=your-passphrase-here

# Trading parameters
POLY_PER_TRADE_SHARES=5
POLY_LOG_LEVEL=info

# Features
POLY_BINANCE_ENABLED=true
POLY_MAKER_REBATES_ENABLED=true
