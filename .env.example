# PolyRustArb Bot Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED FOR REAL TRADING
# =============================================================================

# Your Polygon wallet private key (without 0x prefix or with)
# NEVER commit this to version control!
# POLY_PRIVATE_KEY=your_private_key_here

# =============================================================================
# OPERATING MODE
# =============================================================================

# Operating mode: "test" (simulation) or "real" (live trading)
# Default: test
POLY_MODE=test

# =============================================================================
# TRADING PARAMETERS (Override config.toml)
# =============================================================================

# Shares per trade (e.g., 2.0 = ~$1 at $0.50 price, 200.0 = ~$100)
# POLY_PER_TRADE_SHARES=2.0

# Maximum daily risk as percentage of capital
# POLY_MAX_DAILY_RISK_PCT=20.0

# Spot price move trigger for latency arbitrage (percentage)
# POLY_SPOT_MOVE_TRIGGER_PCT=0.5

# =============================================================================
# NETWORK
# =============================================================================

# Polygon RPC URL (use Alchemy/QuickNode for lower latency in production)
# POLY_RPC_URL=https://polygon-rpc.com

# =============================================================================
# BINANCE INTEGRATION
# =============================================================================

# Enable/disable Binance price streaming
# POLY_BINANCE_ENABLED=true

# =============================================================================
# MAKER REBATES (Jan 2026 Program)
# =============================================================================

# Enable/disable maker rebates optimization
# Earns rebates from taker fees when your limit orders are filled
# POLY_MAKER_REBATES_ENABLED=true

# Enable market making mode (posts bid/ask during low volatility)
# POLY_MARKET_MAKING_ENABLED=false

# =============================================================================
# LOGGING
# =============================================================================

# Log level: trace, debug, info, warn, error
POLY_LOG_LEVEL=info
